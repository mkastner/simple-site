  "license": "MIT",
  "scripts": {
    "dev": "SIMPLESITE_NAME=test NODE_ENV=development node app.js",
    "dev:khe": "SIMPLESITE_NAME=khe NODE_ENV=development node app.js",
    "test": "yarn test:mailer",
    "test:mailer": "yarn test:mailer:contact",
    "test:mailer:contact": "NODE_ENV=test SIMPLESITE_NAME=test node test/lib/mailer/contact.test.js",
    "test:utils": "yarn test:utils:move-path-up",
    "test:utils:move-path-up": "NODE_ENV=test SIMPLESITE_NAME=test node test/lib/utils/move-path-up.test.js",
    "test:utils:build-path-content": "NODE_ENV=test SIMPLESITE_NAME=test node test/lib/utils/build-path-content.test.js",
    "watch-css:test": "node-sass -r views/test/scss views/test/scss -wo public/css/test",
    "watch-css:khe": "node-sass -r views/khe/scss views/khe/scss -wo public/css/khe"
  },
  "dependencies": {
    "node-sass": "^4.14.1",
    "nodemailer": "^6.4.11",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.1.0",
    "express-validator": "^6.6.1",
    "markdown-it": "^11.0.1",
    "markdown-it-attrs": "^3.0.3",
    "mk-env-vars": "https://github.com/mkastner/mk-env-vars.git#v0.0.4",
    "mk-log": "https://github.com/mkastner/mk-log.git#v0.0.11",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "chokidar": "^3.4.2",
    "eslint": "^7.9.0",
    "tape": "^5.0.1"
  }
