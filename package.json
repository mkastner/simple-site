{
  "name": "simple-site",
  "version": "0.0.22",
  "main": "app.js",
  "author": "John Galt <kastner@galt.de>",
  "license": "MIT",
  "bin": {
    "build-site": "./bin/build-site.js",
    "dev-site": "./bin/dev-site.js"
  },
  "scripts": {
    "// build in dev mode": "",
    "build-dev": "node ./bin/build-site.js",
    "// build in production mode": "",
    "build-prod": "NODE_ENV=production yarn build-dev",
    "dev-site": "node ./bin/dev-site.js",
    "dev": "node app.js",
    "build:awards": "yarn build:awards:css && yarn build:awards:views",
    "build:awards:css": "rimraf custom/awards/dist/css && node-sass -r custom/awards/src -o custom/awards/dist/css",
    "build:awards:remote-layout": "SIMPLESITE_NAME=awards node custom/awards/lib/layout-loader.js",
    "// layout loader for kian's template": "",
    "build:awards:remote-layout-next": "SIMPLESITE_NAME=awards node custom/awards/lib/layout-loader-next.js",
    "build:awards:views": "rimraf custom/awards/dist/* && SIMPLESITE_NAME=awards NODE_ENV=production node lib/build/static.js",
    "build:demo:views": "rimraf custom/demo/dist/* && SIMPLESITE_NAME=demo NODE_ENV=production node lib/build/static.js",
    "build:khe": "yarn build:khe:css && yarn build:khe:views",
    "build:khe:css": "rimraf custom/khe/dist/css && node-sass -r custom/khe/src -o custom/khe/dist/css",
    "build:khe:views": "rimraf custom/khe/dist/* && SIMPLESITE_NAME=khe NODE_ENV=production node lib/build/static.js",
    "dev:awards": "SIMPLESITE_NAME=awards NODE_ENV=development node app.js",
    "dev:demo": "SIMPLESITE_NAME=demo NODE_ENV=development node app.js",
    "dev:khe": "SIMPLESITE_NAME=khe NODE_ENV=development node app.js",
    "build:fmh": "yarn build:fmh:css && yarn build:fmh:views",
    "build:fmh:css": "rimraf custom/fmh/dist/css && node-sass -r custom/fmh/src -o custom/fmh/dist/css",
    "build:fmh:views": "rimraf custom/fmh/dist/* && SIMPLESITE_NAME=fmh NODE_ENV=production node lib/build/static.js",
    "dev:fmh": "SIMPLESITE_NAME=fmh NODE_ENV=development node app.js",
    "test": "yarn test:mailer",
    "test:mailer": "yarn test:mailer:contact",
    "test:mailer:contact": "NODE_ENV=test SIMPLESITE_NAME=demo node test/lib/mailer/contact.test.js",
    "test:utils": "yarn test:utils:move-path-up && yarn test:move-path-down",
    "test:utils:build-path-content": "NODE_ENV=test SIMPLESITE_NAME=demo node test/lib/utils/build-path-content.test.js",
    "test:utils:move-path-up": "NODE_ENV=test SIMPLESITE_NAME=demo node test/lib/utils/move-path-up.test.js",
    "test:utils:move-path-down": "NODE_ENV=test SIMPLESITE_NAME=demo node test/lib/utils/move-path-down.test.js",
    "test:utils:traverse-directory": "NODE_ENV=test node test/lib/utils/traverse-directory.test.js",
    "test:utils:file-stem": "NODE_ENV=test SIMPLESITE_NAME=demo node test/lib/utils/file-stem.test.js",
    "watch-css:awards": "node-sass -r custom/awards/scss -wo custom/awards/dist/css",
    "watch-css:demo": "node-sass -r custom/demo/scss -wo custom/demo/dist/css",
    "watch-css:khe": "node-sass -r custom/khe/scss -wo custom/khe/dist/css"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "chokidar": "^3.5.1",
    "express": "^4.17.1",
    "express-handlebars": "^5.1.0",
    "express-validator": "^6.6.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^9.0.1",
    "global": "^4.4.0",
    "linkedom": "^0.9.3",
    "markdown-it": "^11.0.1",
    "markdown-it-attrs": "^3.0.3",
    "mk-env-vars": "https://github.com/mkastner/mk-env-vars.git#v0.0.4",
    "mk-graceful-stat": "https://github.com/mkastner/mk-graceful-stat.git#v0.0.3",
    "mk-log": "https://github.com/mkastner/mk-log.git#v0.0.13",
    "node-fetch": "^2.6.1",
    "node-sass": "^6.0.0",
    "nodemailer": "^6.4.11",
    "path-extra": "^4.3.0",
    "textile-js": "^2.1.1",
    "ws": "^7.3.1",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tape": "^5.0.1",
    "uglify-js": "3"
  }
}
